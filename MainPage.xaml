<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CiciovanBogdanIonutLab7.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Image
                Source="ciciovan_bogdan.jpg"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="Poza Ciciovan Bogdan Ionut" />

            <Label
                Text="Shopping List Creat de Ciciovan Bogdan Ionut"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Aceasta este pagina principala"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Anunt Aceasta este pagina principala" />

            <Button Text="Aflați mai multe"
                FontSize="18" 
                Clicked="OnLearnMoreClicked" 
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
